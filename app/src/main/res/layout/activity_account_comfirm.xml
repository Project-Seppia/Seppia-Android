<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.seppia.android.project_seppia.account.AccountComfirmActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText_comfirmCode"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp"
        android:hint="verification code" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="varify my account"
        android:id="@+id/button_confirmAccount"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/editText_comfirmCode"
        android:layout_alignStart="@+id/editText_comfirmCode"
        android:layout_alignRight="@+id/editText_comfirmCode"
        android:layout_alignEnd="@+id/editText_comfirmCode" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_verifyUser"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/editText_comfirmCode"
        android:layout_alignEnd="@+id/editText_comfirmCode"
        android:layout_marginTop="41dp"
        android:layout_alignLeft="@+id/editText_comfirmCode"
        android:layout_alignStart="@+id/editText_comfirmCode"
        android:hint="username" />
</RelativeLayout>
